{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    // needed when use typed-redux-saga package
    // https://stackoverflow.com/a/49221814/9449426
    "downlevelIteration": true,
    "noEmit": true,
    "jsx": "react"
  },
  "include": [
    "src"
  ]
}
